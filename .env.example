# Database
DATABASE_URL=postgresql://jewelry_admin:secure_password_here@localhost:5432/jewelry_retail
SQLITE_DB_PATH=./local.db

# Backend
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=7d

# Gold Rate API (GoldAPI.io)
# Get your API key from: https://www.goldapi.io/dashboard
GOLD_API_KEY=your_goldapi_io_key_here
GOLD_API_URL=https://www.goldapi.io/api

# GST & Compliance
GST_API_KEY=your_gst_api_key
E_INVOICE_API_URL=https://einvoice.nic.in/

# AI Services
AI_SERVICE_URL=http://localhost:8000
# DeepSeek AI API - Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here
# OpenAI (Optional fallback)
OPENAI_API_KEY=your_openai_key_optional

# Jewelry Recognition AI
JEWELRY_MODEL_PATH=./models/jewelry_recognition
MIN_CONFIDENCE_THRESHOLD=0.7

# AWS (Optional)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=jewelry-assets

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=debug

# Frontend
VITE_API_URL=http://localhost:3000
VITE_WS_URL=ws://localhost:3000
VITE_AI_SERVICE_URL=http://localhost:8000
