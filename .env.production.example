# ==========================================
# PRODUCTION ENVIRONMENT VARIABLES
# Copy to Railway/Render and fill in actual values
# ==========================================

# Node Environment
NODE_ENV=production
PORT=3000

# Database (Get from Neon.tech)
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.region.aws.neon.tech/neondb?sslmode=require

# JWT Configuration (Generate secure random string)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=REPLACE_WITH_SECURE_64_CHAR_HEX_STRING
JWT_EXPIRY=7d

# Gold Rate APIs (FREE - No API Keys Required!)
# Uses public endpoints:
# - data-asg.goldprice.org (XAU/USD, XAG/USD rates)
# - jsDelivr CDN (USD to INR conversion)
# No configuration needed!

# Cloudflare R2 Storage (Get from Cloudflare R2 Dashboard)
AWS_REGION=auto
AWS_ACCESS_KEY_ID=your_r2_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
S3_BUCKET_NAME=jewelry-assets
S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com

# AI Services (After deploying to Render)
AI_SERVICE_URL=https://jewelry-ai-services.onrender.com

# Monitoring (Optional - for error tracking)
SENTRY_DSN=
LOG_LEVEL=info

# GST & Compliance (Optional - for e-invoicing)
GST_API_KEY=
E_INVOICE_API_URL=https://einvoice.nic.in/
